<div class="post-header">

	<p class="post-title">	
		<%= page.title|| __('Untitled') %>
	</p>
			

	<div class="meta-info">	
		<span>
			<%= date(page.date,  "MMM DD, YYYY") %>
		</span>
		<span class="post-count"><i class="iconfont icon-posts"></i>字数统计<%= wordcount(post.content) %>字</span>
		<span class="post-count" style="margin-top: 10px;"><i class="iconfont icon-eye"></i> 阅读时长预计<%= min2read(post.content) %>分钟</span>
	</div>

</div>