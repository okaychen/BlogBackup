<%# post%>

<article class="article">

	<div class="article-header">

		<a class="article-title" href="<%- url_for(post.path) %>">
			<%= post.title || __('Untitled') %></a>

		<%	var date_format = config.date_format %>

		<div class='article-meta'>
			<time>
				<%= date(post.date,  "MMM DD, YYYY") %></time>

			<%if(post.tags && post.tags.length){%>
			<span class="iconfont icon-star"></span>
			<% post.tags.sort('date',-1).each(function (tag){%>
			<a class="article-tag" href="<%- url_for(tag.path) %>">
				<%- tag.name %></a>
			<% })%>
			<%}%>

		</div>
		<div class='article-meta' style="margin-left: -10px;">
			<span class="post-count"><i class="iconfont icon-posts"></i>字数统计
				<%= wordcount(post.content) %>字</span>
			<span class="post-count"><i class="iconfont icon-eye"></i> 阅读时长预计
				<%= min2read(post.content) %>分钟</span>
		</div>

	</div>


	<% if (post.banner){ %>
	<div class="thumb">
		<div class="banner" data-origin="<%- url_for(post.banner) %>"></div>
	</div>
	<% } %>


	<div class="typo article-excerpt">
		<% if (post.excerpt) { %>
		<%- post.excerpt %>
		<% } else { %>
		<%- post.content %>
		<%}%>
	</div>

	<div class='article-bottom'>
		<a class="article-readmore" href="<%- url_for(post.path) %>">
			<%= __('ReadMore') %></a>
	</div>

</article>