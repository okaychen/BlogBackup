

@import '../_import/valine.styl'

.post-header
  position relative 
  border-bottom 1px solid $line-clr 
  & > .post-title 
    font-size 2rem 
    line-height 1.4
    margin 1.5rem 0
    color rgba(0,0,0,.9) 
    @media mq-mobile 
      margin .8rem 0
      font-size 1.75rem
  & > .meta-info
    margin-bottom .5rem
    & > span
      margin-right 16px


.post-content
  min-height 18vh
  margin 1rem 0 2rem  
    
//
// button
//
.donate-btn,.share-btn 
  cursor pointer
  margin 0 14px
  &:hover
      color $thr-clr
//-------------donate
#donate-box  
  fixed-center(460px,400px)  
  display none  
  padding 20px 0
  text-align center
  border-radius: 10px   
  box-shadow: 0 5px 10px 0 rgba(0,0,0,0.05) 
.donate-cancel
  position absolute
  top 12px
  right 24px
  width 12px  
  font-size 18px
.donate-img-box
  width 260px
  margin 0 auto
.donate-img
  margin-top 0
.donate-word
  display inline-block 
  font-size .9rem
.donate-list 
  margin-top 20px
  height auto
//----- donate js
.donate-active
  color $thr-clr
//-------------share
.-mob-share 
  fixed-center(340px,240px)  
  display none    
  text-align center
  border-radius 10px  
  overflow hidden 
  box-shadow 0 5px 10px 0 rgba(0,0,0,0.05)
  
.-mob-share > .-mob-inner
  display flex
  justify-items center
  align-items center
  width 100%
  height 100%
  word-wrap wrap
  &> .-mob-share-link 
    width 33%
    height 25%
    font-size 1.28rem 
    cursor pointer
    &:hover
      color $thr-clr 
.-mob-share-weixin-qrcode-bg    
   background-color rgba(0,0,0,.13) !important 
.-mob-share-weixin-qrcode-content
   border 1px solid $line-clr !important

.post-footer
  overflow hidden
  padding 12px 0
  border-bottom 1px solid $line-clr
.post-footer-meta 
  float left
  & > a
    @extend $item
.post-footer-other
  float right
  &>.post-footer-item
    padding 4px 2px
    height 22px
    line-height 22px
    text-align center
    border-radius 4px
    margin-right .5rem
    border 1px solid $line-clr
    transition all .25s ease-in-out 
    cursor pointer
    &:hover
      border 1px solid $thr-clr
    
 
.post-footer-other,.post-footer-meta 
  @media mq-mobile
    float left
    clear both
    margin-bottom 0.5rem
.post-footer-other
  @media mq-mobile
    float right
.post-footer-meta 
  @media mq-mobile
    float left

.post-footer-nav
  overflow hidden
  padding 3rem 0 2rem 
  margin-bottom 3rem
  border-bottom 1px solid $line-clr

.post-footer-link
  @extend $oneline
  width 50%
  float left
  margin-bottom 1.8rem
  @media mobile 
    float none
    width 100%
    diplay block 


.post-nav-link-wrap
  text-decoration none
  text-shadow 0 1px #fff
  text-align center
  display block
  @media mq-normal
    width 50%
    margin-top 0

.post-nav-caption
  text-transform uppercase
  letter-spacing 2px
  line-height 1rem
  font-weight bold

.post-nav-title
  display block
  text-align center
  font-size 0.8rem
  margin-top 0.5rem