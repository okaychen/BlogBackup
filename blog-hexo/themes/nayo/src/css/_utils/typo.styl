// 文章排版

h1,h2,h3,h4,h5,h6,th   
  color  #444
  font-weight 400
  letter-spacing 1px
  word-spacing 1px   
  
h1
  margin 1.4em 0 1em
  font-size 24px   
h2  
  margin 1.35em  0 1em
  font-size 22px
h3
  margin 1.3em  0 0.8em
  font-size 20px
h4,h5,h6
  margin 1.25em  0 0.8em
  font-size 18px 

.typo p 
  margin 0 0 1.3em 0
  line-height 1.85
  letter-spacing 0.8px
  word-spacing 0.9px
  font-size 15px
  font-weight 300
  color#3f3f3f
.typo img 
  margin 1.2em 0 
.typo li
  line-height 1.7
  font-size 15px  
  margin 8px 0 
  position relativ
strong
  font-weight 500   
   
blockquote
  display block
  letter-spacing .4px
  font-size 15px
  padding 0 12px
  margin 2rem 0 
 
blockquote p  
  margin  0
  padding-left 10px
  border-left 3px solid #eee
  
hr
  margin 1em 0
  opacity .2
  border .2px solid $line-clr
ul,ol
  margin-left 22px
  padding-left 0px
ul p , ol p 
  margin 0



table 
  border-collapse collapse
  border-spacing 0
  font-size 14px
  margin 28px 0
  border-radius 2px

tr:nth-child(even)  
  background #fafafa
th
  font-size 14px  
  
th,td
  border 1px solid #ddd
  padding .4rem 1rem
  margin 28px 0

dt,dd
  margin-bottom 10px

.article-excerpt 
  & h1,& h2,& h3,& h4,& h5,& h6
    margin .8em 0 
  & p
    margin 0 0 .8em

.typo a
  font-size 0.9rem
  color $thr-clr !important  
  text-decoration underline
  font-family 'Arial'
  &:hover    
    color $sub-clr !important  
