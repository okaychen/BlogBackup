.highlight
  position relative  
  width 100% 
  &:after
    position: absolute
    top: 0
    right: 0
    color: #ccc  
    content: "Code"
    font-size: 12px
    padding: 5px 10px 0
    height: 15px  
 
.highlight 
  &.html.highlight:after
    content "HTML"
  &.javascript.highlight:after
    content "Javascript"
  &.js.highlight:after
    content "Javascript"
  &.bash.highlight:after
    content "Shell"
  &.css.highlight:after
    content "CSS" 
  &.vue.highlight:after
    content "Vue" 
  &.sass.highlight:after
    content "SASS"
  &.less.highlight:after
    content "LESS"
  &.styl.highlight:after
    content "Styl" 
  &.java.highlight:after
    content "Java"  
  &.c++.highlight:after
    content "C++"
  &.c.highlight:after
    content "C"  
  &.yml.highlight:after
    content 'YML'
  &.php.highlight:after
    content 'PHP'

